if [ -e "target/cassandra-reaper-0.3.0-SNAPSHOT.jar" ]; then
    echo "Using reaper in target"
    CLASS_PATH="target/cassandra-reaper-0.3.0-SNAPSHOT.jar"
fi

if [ -z "$CLASS_PATH" ]; then
  echo "Looking for reaper in /usr/share/cassandra-reaper/"
  CLASS_PATH="/usr/share/cassandra-reaper/*"
fi

if [ $# -eq 0 ]; then
    CONFIG_PATH="/etc/spotify/cassandra-reaper.yaml"
else
    CONFIG_PATH="$@"
fi

JVM_OPTS=(
    -Xms1G
    -Xmx2G
    )

exec java ${JVM_OPTS[@]} \
    -cp ${CLASS_PATH} \
    com.spotify.reaper.ReaperApplication \
    server ${CONFIG_PATH}
